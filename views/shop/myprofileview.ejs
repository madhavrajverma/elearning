    
    <%- include('../includes/head.ejs') %>  

    <%- include('../includes/navigation.ejs') %>


    <body>
        <div class="my-profile-main-container">
            <div class="person-details">
                <div class="person-name">
                    <p>Name:</p>
                    <p class="name">Madhav raj verma</p>
                </div>
                <div class="person-email">
                    <p>Email:</p>
                    <p class="email">Madhavrajverma175@gmail.com</p>
                </div>
               <div class="btn-contianer">
                    <a class ="btn-container-anchor" href="">Edit Profile</a>
                    <a class ="btn-container-anchor" href="/logout">Logout</a>
               </div>
            </div>

            <div class="container-fluid py-5">
                <div class="container py-5">
                    <div class="text-center mb-5">
                        <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Courses</h5>
                        <h1>Enrrolled Course</h1>
                    </div>
                    <% if(courses.length > 0) { %>
                        <div class="row">
                        <% for (let course of courses ) { %> 
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="rounded overflow-hidden mb-2">
                                    <img class="img-fluid" src=<%= course.course.imageUrl %> alt="">
                                    <div class="bg-secondary p-4">
                                        <div class="d-flex justify-content-between mb-3">
                                            <small class="m-0"><i class="fa fa-users text-primary mr-2"></i>25 Students</small>
                                            <small class="m-0"><i class="far fa-clock text-primary mr-2"></i>01h 30m</small>
                                        </div>
                                        <a class="h5" href="/coursePlay/<%= course.course._id %>"> <%= course.course.name %></a>
                                        <div class="border-top mt-4 pt-4">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>4.5 <small>(250)</small></h6>
                                                <h5 class="m-0"><%= course.course.price %></h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> 
                           
                         <% } %>
                        </div>
                   <% } else { %>
                    <h1>No courses Enroled</h1>
                    <% } %>
                </div>
            </div>

        </div> 
    </body>

